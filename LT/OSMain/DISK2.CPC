void ATAPIWritePktWord(LTBlkDev *bdev,U2 w)
{
  while (!(InP(bdev->base0+IDE_STATUS)&DATA_READY))
    SwapInNext;
  OutPW(bdev->base0+IDE_DATA_REG,w.u1[1]+256*w.u1[0]);
  bdev->last_jiffy=jiffies;
}

