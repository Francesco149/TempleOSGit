    while (InP(bdev->base0+IDE_STATUS) & DATA_READY!=DATA_READY)
      SwapInNext;
//TODO
    sectors_avail=1;
    U2s_avail=sectors_avail*BLK_SIZE>>1;
    RepOutSW(buf,U2s_avail,bdev->base0+IDE_DATA_REG);
    buf+=U2s_avail<<1;
    cnt-=sectors_avail;
  }
  IDEWaitNotBusy(bdev);
