U0 TourMenu()
{
  U8 buf[128];
  I64 i;
  while (TRUE) {
    i=PopUpTourPart;
    if (i>=1) {
      SPrintF(buf,"::/LT/Misc/Tour/Tour%X.AUZ",i);
      ExeFile(buf);
    } else
      break;
  }
}

TourMenu;
