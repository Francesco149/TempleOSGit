U0 PromptDemo()
{
  F64 d;
  I64 i;
  U8 *name;
  LTDate datetime;

  "\r\n\r\nNow prompting from the cmd line.\r\n\r\n"
  "$FG,GREEN$<ENTER>$FG$ keeps default.\r\n\r\n";

  i=PmtI64("Enter int expression(%d):",123);
  "Int=%d\r\n",i;

  d=PmtF64("Enter float expression(%12g):",1.2e3);
  "Float=%e\r\n",d;

  name=PmtStr("Name (%s):","John");
  "Name:%s\r\n",name;
  Free(name);

  datetime=PmtLTDate("Date (%D):",GetCurTimeLTDate);
  "Date=%D\r\n",datetime;
}

PromptDemo;
